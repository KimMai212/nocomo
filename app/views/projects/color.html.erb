<style>
  <%= @color.css.html_safe %>
  .row {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
  }
  .color {
    height: 200px;
  }
  body {
    padding: 0;
    margin: 0;
    overflow: hidden;
  }
</style>
<body>
  <div class="row">
    <div class="color" style="background-color: var(--primary)"></div>
    <div class="color" style="background-color: var(--secondary)"></div>
    <div class="color" style="background-color: var(--secondary-light)"></div>
    <div class="color" style="background-color: var(--white)"></div>
    <div class="color" style="background-color: var(--dark)"></div>
  </div>
</body>
