<% content_for :meta_title, "Login" %>
<div class="login-container container justify-content-center d-flex align-items-center">
  <div class="row col-md-5 m-auto justify-content-center">
    <div id="login" class="col-md-12 m-auto devise-container">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions m-auto">
          <%= f.button :submit, "Log in", class: "btn btn-primary mb-3" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
